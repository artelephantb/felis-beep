{
	"manifest_version": 2,
	"name": "Felis Beep",
	"version": "0",

	"description": "Adds BeepBox to Scratch!",

	"icons": {
		"128": "icons/128.svg"
	},

	"browser_action": {
		"default_title": "Felis Beep",
		"default_icon": "icons/128.svg",
		"default_popup": "popup/app.html"
	},

	"content_scripts": [
		{
			"matches": ["https://scratch.mit.edu/projects/*"],
			"js": ["sites/scratch/app.js"],
			"css": ["main.css"]
		},
		{
			"matches": ["https://scratchscript.quuq.dev/editor.html"],
			"js": ["sites/scratchscript/app.js"],
			"css": ["main.css"]
		}
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "felis@beep"
		}
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval';",
	"permissions": ["storage"]
}
